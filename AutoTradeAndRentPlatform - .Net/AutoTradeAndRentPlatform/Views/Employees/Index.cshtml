
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
<a href="/Employees/Edit">New</a>
<table>
    <tr>
        <td style="margin:1px 80px;text-align:center;">Id</td>
        <td style="margin:1px 80px;text-align:center;">Username</td>
        <td style="margin:1px 80px;text-align:center;">First Name</td>
        <td style="margin:1px 80px;text-align:center;">Last Name</td>
        <td style="margin:1px 80px;text-align:center;">Phone</td>
        <td style="margin:1px 80px;text-align:center;">Email</td>
        <td style="margin:1px 80px;"></td>
    </tr>
    @foreach (Employee item in (List<Employee>)ViewData["items"])
    {
        <tr>
            <td style="margin:1px 50px;text-align:center;">@item.Id</td>
            <td style="margin:1px 50px;text-align:center;">@item.Username</td>
            <td style="margin:1px 50px;text-align:center;">@item.FirstName</td>
            <td style="margin:1px 50px;text-align:center;">@item.LastName</td>
            <td style="margin:1px 50px;text-align:center;">@item.Phone</td>
            <td style="margin:1px 50px;text-align:center;">@item.Email</td>
            <td>
                <a href="/Employees/Edit?id=@item.Id">edit</a>
                <a href="/Employees/Delete?id=@item.Id">delete</a>
            </td>

        </tr>
    }
</table>

